@model IEnumerable<ASPNETMVC.Models.Employee>

@{
    ViewBag.Title = "人員清單列表";
}

<h2>人員清單</h2>

<p>
    @Html.ActionLink("新增人員", "Create")
</p>
<table class="table">
    <tr>
        <th>
            姓名
        </th>
        <th>
            年齡
        </th>
        <th>
            生日
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @item.Id
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.age)
    </td>
    <td>
        @DateTime.Parse(item.bir.ToString()).ToShortDateString()
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }
                    , new { onclick = "return confrim('確定刪除嗎?')"
                    , @class = "btn btn-danger" })
    </td>
</tr>
}

</table>
